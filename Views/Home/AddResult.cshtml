@model PAI_141249.Models.WynikiTurniejow

@{
    ViewBag.Title = "Dodaj wynik";
    int id_turnieju = Convert.ToInt32(Session["id_turnieju"]);
}

<h2>Dodaj wynik</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<div class="container">
    <div class="row-cols-1">
        <div class="row">
            Ja: @Model.IdUser
        </div>
        <div class="row">
            Przeciwnik: @Session["przeciwnik"]
        </div>
    </div>
</div>

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdTurnieju)

        @Html.HiddenFor(model => model.IdUser)

        <div class="form-group">
            @Html.LabelFor(model => model.Wygrany, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Wygrany, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Wygrany, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Potwierdź" class="btn btn-success" onclick="return confirm('Czy na pewno chcesz zatwierdzić wynik?');"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót", "FindTournamentBracket", "Home", new { id = id_turnieju })
</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}