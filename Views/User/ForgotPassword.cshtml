
@{
    ViewBag.Title = "Przypomnij hasło";
}

<h2>Przypomnij hasło</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />

        <div class="text-danger">
            @ViewBag.Message
        </div>

        <div class="text-success">
            @ViewBag.Message
        </div>
        <div class="form-group">
            <label class="controll-label col-md-2">Email</label>
            @Html.TextBox("Email", "", new { @class = "form--control" })
        </div>
        <div class="form-group">
            <div class="ccl-md-offset-2 col-md-10">
                <input type="submit" value="Potwierdź" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
